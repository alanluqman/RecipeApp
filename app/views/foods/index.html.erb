<%= render 'partials/navigation'%>
<div class = 'container'>
   <%= link_to 'Add Food', new_user_food_path, class:'btn btn_orange'  %>
        <table>
            <tr>
                <th>Food</th>
                <th>Measurement unit</th>
                <th>Unit Price</th>
                <th>Action</th>
            </tr>

            <% @foods.each do |food| %>
            <tr>
                <td> <%= food.name %> </td>
                <td> <%= food.measurement_unit %> </td>
                <td> <%= food.price %> $</td>
                <td> <%= button_to 'Delete', user_food_path(user_id: current_user.id, id: food.id), method: :delete , class: '' %>
                </td>
            </tr>
            <% end %>
        </table>
    <% if can? :destroy, @food %>
      <%= button_to 'Delete Post', user_food_path, method: :delete , class: 'delete_btn red_color' %>
    <% end %>

</div>