<div class = 'banner'>
<%= render 'partials/navigation'%>
<div class = 'container d_flex align_center justify_center'>
  <div class = 'session_box m_top_15'>
<h2 class = 'text_center heading_1'>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, class: 'heading_3' %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form_field ' %>
  </div>

  <div class="field">
    <%= f.label :email, class: 'heading_3' %><br />
    <%= f.email_field :email, autocomplete: "email", class: 'form_field ' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'heading_3' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form_field ' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'heading_3' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form_field ' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: 'btn btn_orange heading_4' %>
  </div>
<% end %>

</div>
</div>
</div>
